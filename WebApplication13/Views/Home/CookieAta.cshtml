
@{
    ViewBag.Title = "CookieAta";
}

<div class="row">
    @*//row acıp ıcıne sayfanın tamamaını kapalasın dedık*@
    <div class="col-md-12">
        <div class="col-md-6 col-sm-6">
            <div class="block">
                <div class="block-heading">
                    <div class="main-text h2">
                    Cookie Ekle
                 
                </div>
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <form role="form" action="/Home/CookieAta" method="post">
                           
                            <div class="form-group">
                                <label for="exampleInputEmail1">Cookie Adı</label>
                                <input type="text" name="CookieName" class="form-control" id="exampleInputEmail1" placeholder="Cookie adını giriniz">
                          
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Değeri</label>
                                <input type="text" class="form-control" name="CookieValue" id="exampleInputPassword1" placeholder="Cookie değeri giriniz">

                            </div>

                            <button type="submit" class="btn btn-primary">Cookie Ata</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@{
    ViewBag.Title = "Sil";
}
@using WebApplication13.Models
@model Products
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text">
                    Ürün Sil Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Urun/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <form action="/Urun/Sil" method="post">
                            @*//SİLME İŞLEMİNDE POST KISMI İÇİN Bİ HİDDEN OLUSTURDUK.GORULMESINE GEREK YOK GIZLEDIK
        public ActionResult Sil(Models.Products p) DEKI ProductID ile Hiddenın içindekı name=PrductID ESLESECEK VE HIDDEN ICINDEKI VALUE= ProductID P NIN ICINDEKI PRODUCTıd ıle eslesecek. *@
                            <input type="hidden" name="ProductID" value="@Model.ProductID" />
                            <label>@Model.ProductName Ürünü silinsin mi?</label>

                            <input type="submit" name="name" value="Evet" class="btn-danger" />

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


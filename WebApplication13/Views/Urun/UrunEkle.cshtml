
@{
    ViewBag.Title = "UrunEkle";
}
@using WebApplication13.Models;
@model List<Products>
<div class="row">@*//row acıp ıcıne sayfanın tamamaını kapalasın dedık*@
    <div class="col-md-12">
        <div class="col-md-6 col-sm-6">
            <div class="block">
                <div class="block-heading">
                    <div class="main-text h2">
                     Ürün Ekle
                    </div>
                    <div class="block-controls">
                     <a href="/Urun/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>   
                        <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    </div>
                </div>
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <form role="form" action="/Urun/UrunEkle" method="post">
                            @*action="/Urun/UrunEkle" ile uruncontrolurcss dekı urunekleye gı-onderıyoruz ama ıkı tane oldugunda metod="post" yapıp post olana gonderdık*@
                            <div class="form-group">
                                <label for="exampleInputEmail1" >Ürün Adı</label>
                                <input type="text" name="ProductName" class="form-control" id="exampleInputEmail1" placeholder="Ürün adını giriniz">
                                @*form elemn.html den aldıgımız emaıl yapısından email kısmını soyle değiştirdik:1-type ı emaildi,biz urun adını texboxa gırecegımızden burayı text yaptı.2-placeholder="Ürün adını giriniz"burası textboxın ıcınde yazan sılık yazıydı urun adını gırınız seklınde duzeltık*@
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Fiyat</label>
                                <input type="number" class="form-control" name="UnitPrice" id="exampleInputPassword1" placeholder="Fiyat giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Stok</label>
                               
                                <input type="number" class="form-control" name="UnitsInStock" id="exampleInputEmail1" placeholder="Stok giriniz">
                                @*form elemn.html den aldıgımız emaıl yapısından email kısmını soyle değiştirdik:1-type ı emaildi,biz urun adını texboxa gırecegımızden burayı text yaptı.2-placeholder="Ürün adını giriniz"burası textboxın ıcınde yazan sılık yazıydı urun adını gırınız seklınde duzeltık*@
                            </div>
                            <div class="form-group">
                            <select name="CategoryID" class="form-control">
                                @foreach (Categories ktg in ViewBag.Kategoriler)
                                {
                                    <option value="@ktg.CategoryID">@ktg.CategoryName</option>
                                }
                            </select>
                               
                            </div>
                            <div class="form-group" >
                                <select name="SupplierID" class="form-control">
                                    @foreach (Suppliers tdr in ViewBag.Tedarikciler)
                                    {
                                        <option value="@tdr.SupplierID">@tdr.CompanyName</option>
                                    }
                                </select>
                              
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


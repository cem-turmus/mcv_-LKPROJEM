
@{
    ViewBag.Title = "Roller";
}
@using System.Web.Security
@model List<string>
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                   Roller
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Rol/Ekle" class="btn success-btn rounded">Yeni Rol</a>
                </div>
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Rol Adı</th>
                                    <th>Sil</th>
                              
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (string rol in Model)
                                {
                                    <tr>
                                        <td>@rol</td>
                                        <td><a href="#" class="btn-danger rolsil" data-roladi="@rol">Sil</a></td>
                                        @*data ıcıne roladi diye bır ıd actık dahasonra roladi ıd yı alıyoruz ve ajaxa (ajax 'ın kullanıcı/s e gondermesı ıcın) gonderdık*@
                                        @*ktgsil asagıda script de ozellık kazanıp işlem gorecek *@
                                   
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


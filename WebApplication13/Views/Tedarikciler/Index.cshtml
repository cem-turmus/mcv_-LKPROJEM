
@{
    ViewBag.Title = "Index";
}

@using WebApplication13.Models
@model List<Suppliers>
@*header kısmına kucuk kutuscun cıkması ıcın yapıstırdık*@
@section head{
    <div class="modal fade small-modal" id="small-modal" tabindex="-1" role="dialog" aria-labelledby="small-modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="small-modal-label">Small Modal Box</h4>
                </div>
                <div class="modal-body">
                    <p>Here I am again. This is me being small!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    <button type="button" class="btn btn-primary">Evet</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
}
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Tedarikçiler
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Tedarikci/Ekle" class="btn success-btn rounded">Yeni Tedarikçi</a>
                </div>
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Şirket Adı</th>
                                    <th>Ülke</th>

                                    <th>Faks</th>
                                    <th>Telefon</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Suppliers sp in Model)
                                {
                                    <tr>
                                        <td>@sp.CompanyName</td>
                                        <td>@sp.Country</td>

                                        <td>@sp.Fax</td>
                                        <td>@sp.Phone</td>
                                        <td>
                                            <button class="btn btn-success modalac" data-toggle="modal" data-target="#small-modal" data-id="@sp.SupplierID" data-SupplierName="@sp.CompanyName">
                                                Sil
                                            </button>
                                        </td>
                                        @*Aa heref lınkını sılıp yerıne templateden gelen ornek kutucuga gıtmesı ıcın basılan butonu boyle koyduk*@
                                        @*data ıcıne ktgid diye bır ıd actık dahasonra kategori ıd yı alıyoruz ve ajaxa (ajax 'ın kategori/sil e gondermesı ıcın) gonderdık*@
                                        @*ktgsil asagıda script de ozellık kazanıp işlem gorecek *@
                                        <td><a href="/Kategoriler/Güncelle/@sp.SupplierID" class="btn-primary">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/Content/assets/js/required/jquery.easing.1.3-min.js"></script>
    <script>
        $(".modalac").click(function () {
            alert("cem")
        })
    </script>

}
